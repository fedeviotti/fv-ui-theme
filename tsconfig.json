{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": false,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "target": "ES2017",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}